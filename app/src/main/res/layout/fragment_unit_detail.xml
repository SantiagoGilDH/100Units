<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.santiagogil.a100units.view.FragmentUnitDetail">

    <TextView
        android:id="@+id/text_view_unit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Unit"
        android:textSize="24dp"

        />

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_unit_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            />

        <EditText
            android:id="@+id/edit_text_unit_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp" />

    </ViewSwitcher>

    <Button
        android:id="@+id/button_save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>
